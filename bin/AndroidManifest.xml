<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sleepbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/alarm_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sleepbuddy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sleepbuddy.CreateAlarmActivity"
            android:label="@string/title_activity_create_alarm" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sleepbuddy.MainActivity" />
        </activity>

        <service android:name="com.example.sleepbuddy.AlarmService" />
        <service android:name="com.example.sleepbuddy.SnoozeService" />
        <service android:name="com.example.sleepbuddy.SnoozeServiceTwo" />
        <service android:name="com.example.sleepbuddy.SnoozeServiceThree" />

        <activity
            android:name="com.example.sleepbuddy.AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
        <activity
            android:name="com.example.sleepbuddy.MathSumActivity"
            android:label="@string/title_activity_math_sum" >
        </activity>
        <activity
            android:name="com.example.sleepbuddy.StringMatchActivity"
            android:label="@string/title_activity_string_match" >
        </activity>
        <activity
            android:name="com.example.sleepbuddy.AlarmActivityOne"
            android:label="@string/title_activity_alarm_activity_one" >
        </activity>
        <activity
            android:name="com.example.sleepbuddy.AlarmActivityTwo"
            android:label="@string/title_activity_alarm_activity_two" >
        </activity>
        <activity
            android:name="com.example.sleepbuddy.AlarmActivityThree"
            android:label="@string/title_activity_alarm_activity_three" >
        </activity>
    </application>

</manifest>